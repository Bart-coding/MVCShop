@model IEnumerable<MVCShop.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>KATEGORIE</h2>

<p>
    @Html.ActionLink("Dodaj nową", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryTypeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Visible)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.CategoryTypeID == null)
            {
                @Html.DisplayName("brak")
            }
            else
            {
                @Html.DisplayFor(modelItem => item.CategoryType.Name)
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Visible)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id = item.CategoryID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id = item.CategoryID }) |
            @Html.ActionLink("Usuń", "Delete", new { id = item.CategoryID }) |
            @Html.ActionLink("Generuj cennik", "GeneratePriceList", new { id = item.CategoryID })
        </td>
    </tr>
}

</table>
